<div class="row">
    <div class="col-md-4 product-edit-block" id="editBlock">
        <p><b>Edit Product</b></p>
        <form role="form">
            <input type="hidden" id="editId" />
            <div class="form-group">
                <label for="addName">Name:</label>
                <input type="text" class="form-control" id="editName">
            </div>
            <div class="form-group">
                <label for="addDescription">Description:</label>
                <input type="text" class="form-control" id="editDescription">
            </div>
            <div class="form-group">
                <label for="addPrice">Price:</label>
                <input type="text" class="form-control" id="editPrice">
            </div>
            <div class="form-group">
                <label for="addPrice">PictureUrl:</label>
                <input type="text" class="form-control" id="editPictureUrl">
            </div>
            <button type="submit" id="editProduct" class="btn btn-primary">Update</button>
            <button class="btn btn-default clear-values">Clear</button>
        </form>
    </div>
    <div class="col-md-4 product-create-block" id="createBlock">
        <p><b>Add Product</b></p>
        <form role="form">
            <input type="hidden" id="editId" />
            <div class="form-group">
                <label for="addName">Name:</label>
                <input type="text" class="form-control" id="addName">
            </div>
            <div class="form-group">
                <label for="addDescription">Description:</label>
                <input type="text" class="form-control" id="addDescription">
            </div>
            <div class="form-group">
                <label for="addPrice">Price:</label>
                <input type="text" class="form-control" id="addPrice">
            </div>
            <div class="form-group">
                <label for="addPrice">PictureUrl:</label>
                <input type="text" class="form-control" id="addPictureUrl">
            </div>
            <button type="submit" id="addProduct" class="btn btn-success">Create</button>
            <button class="btn btn-default clear-values">Clear</button>
        </form>
    </div>
    <div class="col-md-8">
       <div id="tableBlock" class="product-block"></div>
    </div>
    @section scripts
    {
        <script src="@Url.Content("~/Scripts/app.index.js")"></script>
    }
</div>
